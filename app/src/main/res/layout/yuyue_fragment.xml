<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:background="#f8f8f8"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:background="@mipmap/mine_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <LinearLayout
            android:id="@+id/dingwei_linear"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_65"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/dingwei"
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/dizhi_tv"
                android:textSize="@dimen/sp_20"
                android:textColor="#FFFFFF"
                android:text="北京四合院"
                android:singleLine="true"
                android:ellipsize = "end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/xialasanjiao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sousuolan_linear"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_width="@dimen/dp_330"
            android:gravity="center"
            android:background="@drawable/sousuokuang"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_35" >
            <ImageView
                android:src="@mipmap/sousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#999999"
                android:text="搜索店铺、菜品名称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/fujinshangjia"
        android:text="附近商家"
        android:layout_marginLeft="@dimen/dp_22"
        android:textSize="@dimen/sp_13"
        android:textColor="#999999"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/yuye_rv"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>