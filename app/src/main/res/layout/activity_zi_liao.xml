<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.ZiLiaoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/mine_back"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="编辑资料"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:src="@mipmap/left_jiantou"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textSize="13dp"
            android:textColor="#999999"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="10dp"

            />
        <RelativeLayout
            android:id="@+id/touxiang_re"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#fff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="头像"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="#464646"
                android:layout_marginLeft="22.5dp"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/circleImageView"
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                fresco:failureImage="@mipmap/head_portrait"
                android:layout_alignParentRight="true"
                fresco:placeholderImage="@mipmap/head_portrait"
                android:layout_marginRight="12.5dp"
                android:clipChildren="true"
                android:layout_marginBottom="@dimen/dp_5"
                fresco:roundedCornerRadius="180dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginLeft="22.5dp"
            android:background="#E0E0E0"
            />
        <RelativeLayout
            android:id="@+id/username_re"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#fff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="用户名"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="#464646"
                android:layout_marginLeft="22.5dp"
                />

            <TextView
                android:id="@+id/username_xg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="黄小二"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_30"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账号绑定"
            android:textSize="13dp"
            android:textColor="#999999"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="10dp"

            />
        <RelativeLayout
            android:id="@+id/mobile_re"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#fff"
            >
            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#464646"
                android:src="@mipmap/phone_d"
                android:layout_marginLeft="12.5dp"
                />

            <TextView
                android:layout_toRightOf="@id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号码"
                android:gravity="center"
                android:layout_toLeftOf="@+id/dowmn1"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:id="@+id/tel_mobile"
                android:layout_alignParentRight="true"
                android:text="13666666666"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>